<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="0dip"
       android:layout_weight="1"
       android:orientation="vertical"
       android:paddingBottom="5dip"
       android:paddingLeft="20dip"
       android:paddingRight="10dip"
       android:paddingTop="30dip"
       tools:ignore="UselessParent" >

       <TextView
           android:id="@+id/summary_textView_1"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:paddingBottom="5dip"
           android:text="@string/summary"
           android:textAppearance="?android:attr/textAppearanceMedium" />
       
          <Button
              android:id="@+id/check"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal|center_vertical"
              android:minWidth="100dip"
              android:background="@drawable/summery_button"
              android:text="What we have done"
              android:paddingBottom="30dip"
              android:textSize="15sp"
              android:padding="10dip"
              android:typeface="monospace" />
          <Button
              android:id="@+id/databrowse"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal|center_vertical"
              android:minWidth="100dip"
              android:background="@drawable/summery_button"
              android:text="How to browse data"
              android:paddingBottom="30dip"
              android:textSize="20sp"
              android:typeface="serif" />
          <Button
              android:id="@+id/next"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal|center_vertical"
              android:minWidth="100dip"
              android:background="@drawable/summery_button"
              android:text="What to do next"
              android:paddingBottom="30dip"
              android:textSize="20sp"
              android:typeface="sans" />

       <TextView
           android:id="@+id/summary_textView_2"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:paddingBottom="5dip"
           android:text="@string/summary"
           android:textAppearance="?android:attr/textAppearanceSmall" />
       
       <TextView
           android:id="@+id/summary_textView_3"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:paddingBottom="10dip"
           android:text="@string/summary"
           android:textAppearance="?android:attr/textAppearanceSmall" />
       
       <TextView
           android:id="@+id/summary_textView_4"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:paddingBottom="5dip"
           android:text="@string/summary"
           android:textAppearance="?android:attr/textAppearanceSmall" />

   </LinearLayout>
</LinearLayout>